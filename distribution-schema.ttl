@prefix :         <http://fairdatapoint.org/> .
@prefix dash:     <http://datashapes.org/dash#> .
@prefix dcat:     <http://www.w3.org/ns/dcat#> .
@prefix dct:      <http://purl.org/dc/terms/> .
@prefix sh:       <http://www.w3.org/ns/shacl#> .
@prefix xsd:      <http://www.w3.org/2001/XMLSchema#> .

:DistributionShape a sh:NodeShape ;
  sh:targetClass dcat:Distribution ;

  sh:property [
    sh:path dct:title ;
    sh:name "Title" ;
    sh:description "A human-readable title for this specific file (e.g., 'Original CSV Data' or 'FAIRified RDF Data')." ;
    sh:nodeKind sh:Literal ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    dash:editor dash:TextFieldEditor ;
    sh:order 1 ;
  ], [
    sh:path dct:description ;
    sh:name "Description" ;
    sh:description " A brief description of this specific file format." ;
    sh:nodeKind sh:Literal ;
    sh:minCount 0 ;
    dash:editor dash:TextAreaEditor ;
    sh:order 2 ;
  ], [
    sh:path dcat:downloadURL ;
    sh:name "Download URL" ;
    sh:description "The persistent W3ID identifier that resolves to the raw data file." ;
    sh:nodeKind sh:IRI ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    dash:editor dash:URIEditor ;
    sh:order 3 ;
  ], [
    sh:path dcat:mediaType ;
    sh:name "Media Type (MIME Type)" ;
    sh:description "The standard MIME type of the file (e.g., 'text/csv' or 'text/turtle')." ;
    sh:nodeKind sh:Literal ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    dash:editor dash:TextFieldEditor ;
    sh:order 4 ;
  ], [
    sh:path dcat:byteSize ;
    sh:name "Byte Size" ;
    sh:description " The size of the file in bytes." ;
    sh:datatype xsd:decimal ;
    sh:maxCount 1 ;
    dash:editor dash:TextFieldEditor ;
    sh:order 5 ;
  ], [
    sh:path dct:issued ;
    sh:name "Issued Date" ;
    sh:description "The date this distribution was made available." ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
    dash:editor dash:DateTimePickerEditor ;
    sh:order 6 ;
  ] .